<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title><%=table_name%></title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    />
  </head>
  <body class="container" style="margin-top: 50px">
    <% if (messages.success) { %>
    <div class="alert alert-success" role="alert"><%- messages.success %></div>
    <% } %> <% if (messages.error) { %>
    <div class="alert alert-danger" role="alert"><%- messages.error %></div>
    <% } %>

    <div class="card">
      <div class="card-header">
        <ul class="nav nav-pills w-100">
          <li class="nav-pill active">
            <a class="nav-link"><%=table_name%></a>
          </li>
          <li class="nav-pill ml-auto">
            <a class="nav-link active" href="/table/add?table=<%=table_name%>"
              >Add <%=table_name%></a
            >
          </li>
        </ul>
      </div>
      <div class="card-body">
        <table class="table">
          <thead>
            <tr>
              <% for(var i = 0; i < data_properties.length; i++) { %>
              <th scope="col"><%= data_properties[i] %></th>
              <% } %>
              <th width="200px">Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i = 0; i< data.length; i++) { %>
            <tr>
              <% for(var j = 0; j < data_properties.length; j++) {%>
              <td><%= data[i][data_properties[j]] %></td>
              <% } %>
              <td>
                <a
                  class="btn btn-success edit"
                  href="../table/edit/?table_name=<%=table_name%>&id=<%=data[i][primary_key]%>"
                  >Edit</a
                >
                <a
                  class="btn btn-danger delete"
                  onclick="return alert('Are You sure?')"
                  href="../table/delete/?table_name=<%=table_name%>&id=<%=data[i][primary_key]%>"
                  >Delete</a
                >
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
